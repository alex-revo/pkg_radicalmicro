<extension type="plugin" group="system" method="upgrade" version="3">
	<name>PLG_SYSTEM_RADICALMICRO</name>
	<creationDate>February 2022</creationDate>
	<author>Dmitriy Vasyukov</author>
	<copyright>Copyright (C) 2005 - 2022 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@fictionlabs.ru</authorEmail>
	<authorUrl>https://fictionlabs.ru</authorUrl>
	<version>0.0.2</version>
	<description>PLG_SYSTEM_RADICALMICRO_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>

	<files>
		<filename>bootstrap.php</filename>
		<folder>src</folder>
		<filename plugin="radicalmicro">radicalmicro.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_radicalmicro.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_radicalmicro.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_system_radicalmicro.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_system_radicalmicro.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="enable_schema" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_ENABLE_SCHEMA"
					description="PLG_SYSTEM_RADICALMICRO_ENABLE_SCHEMA_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="enable_og" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_ENABLE_OG"
					description="PLG_SYSTEM_RADICALMICRO_ENABLE_OG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="schema">
				<field name="schema_add_website_type" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_WEBSITE"
					description="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_WEBSITE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="schema_add_logo_type" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_LOGO"
					description="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_LOGO_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
                	name="schema_add_logo_type_image"
                	type="media"
                	default=""
					showon="schema_add_logo_type:1"
                	label="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_LOGO_IMAGE"
					description="PLG_SYSTEM_RADICALMICRO_SCHEMA_ADD_LOGO_IMAGE_DESC" />
			</fieldset>
			<fieldset name="opengraph">
				<field name="og_add_facebook" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_ADD_FACEBOOK"
					description="PLG_SYSTEM_RADICALMICRO_ADD_FACEBOOK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="og_add_twitter" type="radio" default="1"
					class="btn-group"
					label="PLG_SYSTEM_RADICALMICRO_ADD_TWITTER"
					description="PLG_SYSTEM_RADICALMICRO_ADD_TWITTER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
